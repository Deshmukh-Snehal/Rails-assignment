<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-striped" id="postTable">
  <thead class="table-dark">
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Sport name</th>
      <th>Description</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><img src="<%= post.image %>" class= "p-show"></td>
        <td><%= post.title %></td>
        <td><%= post.sport.sport_name %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show Sport',[@sport, post] %></td>
        <td><%= link_to 'Edit Post', edit_sport_post_path(@sport, post) %></td>
        <td><%= link_to 'Destroy Post', [@sport, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= link_to 'New Post', new_sport_post_path(@sport), class:"btn btn-primary" %>
