<%= form_with(model: achievement,:html => {id: "achievementValidate"}, local: true) do |form| %>
  <% if achievement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(achievement.errors.count, "error") %> prohibited this achievement from being saved:</h2>

      <ul>
      <% achievement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field form-group">
    <%= form.label :awards %>
    <%= form.text_field :awards, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :medals %>
    <%= form.text_field :medals, class:"form-control" %>
  </div>
  <% if current_user.admin? %>
  <div class="field form-group">
    <%= form.label :status %>
    Approve<%= form.radio_button :status, ['Approved']%>
    
    Reject<%= form.radio_button :status, ['Rejected']%>
    <% end %>
  </div>
  <div class="field form-group">
    <%= form.number_field :user_id,id: :achievement_user_id, class:"form-control", value: current_user.id,type: :hidden %>
  </div>
  <br/>
  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
