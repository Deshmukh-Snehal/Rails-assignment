<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table class="table table-striped" id="commentTable">
  <thead class="table-dark">
    <tr>
      <th>Comment</th>
      <th>Post</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.comment %></td>
        <td><%= comment.post.title%></td>
        <td><%= link_to 'Show Post', [@sport, @post, comment] %></td>
        <td><%= link_to 'Edit Comment', edit_sport_post_comment_path(@sport, @post, comment) %></td>
        <td><%= link_to 'Destroy Comment', [@sport, @post, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>

<%= link_to 'New Comment', new_sport_post_comment_path(@sport, @post), class:"btn btn-primary" %>
