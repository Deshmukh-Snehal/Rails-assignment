<div class="card">
  <div class="card-header">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Title:</strong>
      <%= @offer.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @offer.description %>
    </p>

    <p>
      <strong>Start Date:</strong>
      <%= @offer.start_date.strftime("%Y-%m-%d at %I:%M %p") %>
    </p>

    <p>
      <strong>End Date:</strong>
      <%= @offer.end_date.strftime("%Y-%m-%d at %I:%M %p") %>
    </p>
    
    <p>
      <strong>Business:</strong>
      <%= @offer.business.name %>
    </p>

    <%= link_to 'Edit', edit_offer_path, class:"btn btn-secondary" %> <br><br>
    <%= link_to 'Back', offers_path, class:"btn btn-secondary"%>
  </div>
</div>