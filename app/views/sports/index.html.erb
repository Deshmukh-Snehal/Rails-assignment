<p id="notice"><%= notice %></p>

<h1>Sports</h1>

<table class="table table-striped" id="dataid">
  <thead class="table-dark">
    <tr>
      <th>Sport name</th>
      <th>Sport equipments</th>
      <th>Sport player</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>
  <tbody>
    <% @sports.each do |sport| %>
      <tr>
        <td><%= sport.sport_name %></td>
        <td><%= sport.sport_equipments %></td>
        <td><%= sport.sport_player %></td>
        <td><%= link_to 'Show', sport %></td>
        <%if current_user && current_user.admin?%>
        <td><%= link_to 'Edit', edit_sport_path(sport) %></td>
        <td><%= link_to 'Destroy', sport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
$(document).ready(function() {
        var sTable = $('#dataid').DataTable({})
    });
</script>

