<%= form_with(model: [@sport, playerdetail],:html => {id: "playerValidate"}, local: true) do |form| %>
  <% if playerdetail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(playerdetail.errors.count, "error") %> prohibited this playerdetail from being saved:</h2>

      <ul>
      <% playerdetail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :country %>
    <%= form.text_field :country, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :mobile_no %>
    <%= form.text_field :mobile_no, class:"form-control" %>
  </div>
  
  <br/>
  <% if current_user.admin? %>
    <div class="field form-group">
      <%= form.label :gender %>
      Male<%= form.radio_button :gender, ['Male']%>
      Female<%= form.radio_button :gender, ['Female']%>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.number_field :user_id,id: :playerdetail_user_id, class:"form-control", value: current_user.id,type: :hidden %>
  </div>
  <br/>
  <div class="actions">
    <%= form.submit class:"btn btn-primary"%>
  </div>
<% end %>
